<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:padding="20dp"    android:layout_width="match_parent"    android:layout_height="match_parent">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Todo qoshish"        android:textSize="20sp"        android:textStyle="bold"        android:textColor="@color/black"        android:layout_marginBottom="20dp"        />    <EditText        android:id="@+id/title"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Sarlavha:"        />    <EditText        android:id="@+id/text"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Matn:"        android:padding="20dp"        />    <EditText        android:id="@+id/deadline"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Oxirgi muddat:"        android:padding="20dp"        />    <Spinner        android:id="@+id/status"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textSize="20sp"        android:padding="20dp"        android:entries="@array/status"        android:layout_marginBottom="10dp"/>    <Button        android:id="@+id/save"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="saqlash"        /></LinearLayout>